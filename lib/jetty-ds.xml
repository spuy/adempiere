<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="Server" class="org.eclipse.jetty.server.Server">
    <New id="AdempiereDS" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg></Arg>
        <Arg>java/AdempiereDS</Arg>
        <Arg>
            <New class="com.zaxxer.hikari.HikariDataSource">
                <Arg>
                    <New class="com.zaxxer.hikari.HikariConfig">
                        <Set name="DriverClassName">@@JDBC_DRIVER_CLASS@@</Set>
                        <Set name="JdbcUrl">@ADEMPIERE_DB_URL@</Set>
                        <Set name="Username">@ADEMPIERE_DB_USER@</Set>
                        <Set name="Password">@ADEMPIERE_DB_PASSWORD@</Set>
                        <Set name="connectionTimeout">30000</Set>
                        <Call name="addDataSourceProperty">
                            <Arg>poolName</Arg>
                            <Arg>AdempiereDS</Arg>
                        </Call>   
                        <Call name="addDataSourceProperty">
                            <Arg>cachePrepStmts</Arg>
                            <Arg>true</Arg>
                        </Call>   
                        <Call name="addDataSourceProperty">
                            <Arg>prepStmtCacheSize</Arg>
                            <Arg>250</Arg>
                        </Call>        
                        <Call name="addDataSourceProperty">
                            <Arg>prepStmtCacheSqlLimit</Arg>
                            <Arg>2048</Arg>
                        </Call>   
                        <Call name="addDataSourceProperty">
                            <Arg>connectionInitSql</Arg>
                            <Arg>1</Arg>
                        </Call>
                        <Call name="addDataSourceProperty">
                            <Arg>minimumIdle</Arg>
                            <Arg>20</Arg>
                        </Call>
                        <Call name="addDataSourceProperty">
                            <Arg>idleTimeout</Arg>
                            <Arg>10000</Arg>
                        </Call>
                        <Call name="addDataSourceProperty">
                            <Arg>keepaliveTime</Arg>
                            <Arg>30000</Arg>
                        </Call>
                        <Call name="addDataSourceProperty">
                            <Arg>maxLifetime</Arg>
                            <Arg>1800000</Arg>
                        </Call>
                        <Call name="addDataSourceProperty">
                            <Arg>maximumPoolSize</Arg>
                            <Arg>150</Arg>
                        </Call>                        
                    </New>
                </Arg>
            </New>z
        </Arg>
    </New>
    <New id="threadPool" class="org.eclipse.jetty.util.thread.QueuedThreadPool">
        <Set name="maxThreads" type="int">
            <Property name="jetty.threadPool.maxThreads" default="500"/>
        </Set>
    </New>
</Configure>
